<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.blue.mytalk.Activity.LoginActivity">
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/margin_large"
        android:layout_width="wrap_content"
              app:cardCornerRadius="@dimen/margin_small"
        android:layout_height="wrap_content">
    <LinearLayout

        android:padding="@dimen/margin_small"
       android:layout_gravity="center"
        android:id="@+id/layout_love"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:gravity="left"
            android:src="@drawable/ic_love_24dp"
            android:layout_width="@dimen/love"
            android:layout_height="@dimen/love"

            />

        <TextView
            android:layout_gravity="center"
            android:text="0"
            android:textColor="@color/blue"
            android:layout_marginLeft="@dimen/margin_large"
            android:textSize="@dimen/love"
            android:id="@+id/text_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </LinearLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="@dimen/size_login"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <EditText
            android:textSize="@dimen/text_size_large"
            android:maxLength="20"
            android:id="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="@string/name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/text_size_nor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/namsinh" />

            <Spinner
                android:textSize="@dimen/text_size_nor"
                android:id="@+id/spinner_old"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/text_size_nor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/goitinh" />

            <Spinner
                android:textSize="@dimen/text_size_nor"
                android:id="@+id/spinner_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:entries="@array/sex" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:orientation="horizontal">

            <TextView
                android:textSize="@dimen/text_size_nor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ngongu" />

            <Spinner
                android:textSize="@dimen/text_size_nor"
                android:id="@+id/spinner_Language"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:entries="@array/language" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:textSize="@dimen/text_size_nor"
        android:id="@+id/buton_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="SAVE" />
</RelativeLayout>
